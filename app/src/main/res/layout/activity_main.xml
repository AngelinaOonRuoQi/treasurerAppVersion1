<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.BookActivity">


    <TextView
        android:id="@+id/tv_add_semester_title"
        android:layout_width="406dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Add Semester"
        android:textColor="@android:color/black"
        android:textSize="24sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semester Name:" />



            <EditText
                android:id="@+id/et_semester_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                />




        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_plus"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:padding="8dp"
            android:background="@color/colorAccent"
            android:text="+"
            android:textColor="#ffffff"
            android:layout_gravity="right"
            android:textSize="24sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_semester_title"
        android:layout_width="406dp"
        android:layout_height="69dp"
        android:gravity="center"
        android:text="Semester List"
        android:textColor="@android:color/black"
        android:textSize="24sp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_semester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>


